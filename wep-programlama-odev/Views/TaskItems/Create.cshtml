@model wep_programlama_odev.Models.TaskItem

@{
    ViewData["Title"] = "Yeni Görev Oluştur";
}

<h1 class="page-title">Yeni Görev Oluştur</h1>

<div class="card-custom">
    <h4 class="mb-3">Görev Bilgileri</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Başlık -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Örn: Veritabanı tablolarını oluştur" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Açıklama -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="İstersen detay ekleyebilirsin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Durum -->
                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Durum</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Beklemede">Yapılacak</option>
                        <option value="DevamEdiyor">Devam Ediyor</option>
                        <option value="Tamamlandi">Tamamlandı</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Proje -->
                <div class="mb-3">
                    <label asp-for="ProjectId" class="form-label">Proje</label>
                    <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.ProjectId">
                        <option value="">-- Proje Seçin --</option>
                    </select>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>
                <!-- Atanan Kullanıcı -->
                <div class="form-group">
                    <label class="control-label">Görev Atanacak Kullanıcı</label>
                    <select asp-for="AssignedUserId" class="form-control" asp-items="ViewBag.AssignedUserId">
                        <option value="">-- Kullanıcı Seçin --</option>
                    </select>
                    <span asp-validation-for="AssignedUserId" class="text-danger"></span>
                </div>

                <!-- Butonlar -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
