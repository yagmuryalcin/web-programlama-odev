@model wep_programlama_odev.Models.TaskItem

@{
    ViewData["Title"] = "Görev Detayı";
    bool isAdmin = User.IsInRole("Admin");

    string badgeClass = Model.Status switch
    {
        wep_programlama_odev.Models.TaskStatus.Beklemede => "bg-secondary",
        wep_programlama_odev.Models.TaskStatus.DevamEdiyor => "bg-warning text-dark",
        wep_programlama_odev.Models.TaskStatus.Tamamlandi => "bg-success",
        _ => "bg-dark"
    };

    string statusText = Model.Status switch
    {
        wep_programlama_odev.Models.TaskStatus.Beklemede => "Yapılacak",
        wep_programlama_odev.Models.TaskStatus.DevamEdiyor => "Devam Ediyor",
        wep_programlama_odev.Models.TaskStatus.Tamamlandi => "Tamamlandı",
        _ => Model.Status.ToString()
    };

    // ✅ Controller'dan ViewBag ile gelen yorumlar
    var comments = ViewBag.Comments as List<wep_programlama_odev.Models.TaskComment>;
}

<h1 class="page-title">Görev Detayı</h1>

<div class="card-custom">
    <h4 class="mb-3">Görev Bilgileri</h4>
    <hr />

    <dl class="row mb-0">
        <dt class="col-sm-3">Başlık</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Açıklama</dt>
        <dd class="col-sm-9">
            @if (string.IsNullOrWhiteSpace(Model.Description))
            {
                <span class="text-muted">Açıklama girilmemiş.</span>
            }
            else
            {
                @Model.Description
            }
        </dd>

        <dt class="col-sm-3">Durum</dt>
        <dd class="col-sm-9">
            <span class="badge @badgeClass">@statusText</span>
        </dd>

        <dt class="col-sm-3">Oluşturulma Tarihi</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-3">Proje</dt>
        <dd class="col-sm-9">
            @if (Model.Project == null)
            {
                <span class="text-muted">Proje bilgisi yok</span>
            }
            else
            {
                @Model.Project.Name
            }
        </dd>

        @* ✅ Atanan kişi *@
        <dt class="col-sm-3">Atanan Kişi</dt>
        <dd class="col-sm-9">
            @{
                var assignedName =
                Model.AssignedUser?.UserName
                ?? Model.AssignedUser?.Email
                ?? (string.IsNullOrWhiteSpace(Model.AssignedUserId) ? null : Model.AssignedUserId);
            }

            @if (string.IsNullOrWhiteSpace(assignedName))
            {
                <span class="text-muted">Atama yapılmamış.</span>
            }
            else
            {
                @assignedName
            }
        </dd>
    </dl>
</div>

@* ✅ YORUMLAR *@
<div class="card-custom mt-3">
    <h4 class="mb-3">Yorumlar</h4>
    <hr />

    @if (Model.TaskComments == null || !Model.TaskComments.Any())
    {
        <p class="text-muted mb-0">Bu göreve henüz yorum yazılmamış.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var c in Model.TaskComments.OrderByDescending(x => x.CreatedAt))
            {
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>
                            @(c.User?.UserName ?? c.User?.Email ?? "Kullanıcı")
                        </strong>
                        <small class="text-muted">
                            @c.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </small>
                    </div>

                    <div class="mt-2">
                        @c.Text
                    </div>
                </div>
            }
        </div>
    }
</div>


<div class="mt-2">
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            Düzenle
        </a>
    }

    <a asp-action="Index" class="btn btn-secondary">
        Listeye Dön
    </a>

    @if (Model.Project != null)
    {
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-outline-primary">
            Proje Detayına Git
        </a>
    }
</div>
