                                <div class="text-muted small">
                                    Proje: @(t.Project?.Name ?? "—")
                                </div>
                                <div class="text-muted small">
                                    Atanan: @(t.AssignedUser?.UserName ?? "—")
                                </div>
                            </div>

                            <a class="btn btn-sm btn-outline-primary"
                               asp-action="Details" asp-route-id="@t.Id">
                                Detay
                            </a>
                        </div>

                        <div class="mt-2 d-flex gap-2 align-items-center">
                            <form asp-action="UpdateStatus" method="post" class="d-flex gap-2 align-items-center">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@t.Id" />

                                <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                                    <option value="Beklemede">Beklemede</option>
                                    <option value="DevamEdiyor" selected>Devam Ediyor</option>
                                    <option value="Tamamlandi">Tamamlandı</option>
                                </select>
                            </form>

                            @if (User.IsInRole("Admin"))
