<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - wep_programlama_odev</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/wep_programlama_odev.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="app-shell">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="sidebar-brand">
                <div class="brand-title">PROJE YÖNETİM</div>
                <div class="brand-subtitle">wep_programlama_odev</div>
            </div>

            <nav class="sidebar-nav">
                <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                   asp-controller="Home" asp-action="Index">
                    <span class="sidebar-icon">🏠</span>
                    <span>Anasayfa</span>
                </a>

                <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")"
                   asp-controller="Projects" asp-action="Index">
                    <span class="sidebar-icon">📁</span>
                    <span>Projeler</span>
                </a>

                <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TaskItems" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                   asp-controller="TaskItems" asp-action="Index">
                    <span class="sidebar-icon">✅</span>
                    <span>Görevler</span>
                </a>

                <!-- ✅ KANBAN (Görev Panosu) -->
                <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TaskItems" && ViewContext.RouteData.Values["action"]?.ToString() == "Board" ? "active" : "")"
                   asp-controller="TaskItems" asp-action="Board">
                    <span class="sidebar-icon">🧩</span>
                    <span>Görev Panosu</span>
                </a>

                @* Kullanıcılar sadece Admin menüde görünsün *@
                @if (User.IsInRole("Admin"))
                {
                    <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")"
                       asp-controller="Users" asp-action="Index">
                        <span class="sidebar-icon">👤</span>
                        <span>Kullanıcılar</span>
                    </a>
                }

                <div class="sidebar-sep"></div>

                <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")"
                   asp-controller="Home" asp-action="Privacy">
                    <span class="sidebar-icon">🔒</span>
                    <span>Gizlilik</span>
                </a>
            </nav>

            <!-- SIDEBAR FOOTER (SOL ALT HESAP) -->
            <div class="sidebar-footer">
                <div class="sidebar-footer-card">
                    <div class="footer-title">Hesap</div>
                    <div class="footer-subtitle">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <span>@User.Identity.Name</span>
                        }
                        else
                        {
                            <span>Giriş yapılmadı</span>
                        }
                    </div>
                </div>

                <!-- ✅ Menüyle aynı stil: Giriş Yap / Çıkış Yap -->
                <partial name="_LoginPartial" />
            </div>

        </aside>

        <!-- MAIN -->
        <div class="main">
            <!-- TOPBAR -->
            <header class="topbar">
                <div class="topbar-left">
                    <span class="topbar-page">@ViewData["Title"]</span>
                </div>
            </header>

            <!-- CONTENT -->
            <main class="content">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer class="app-footer">
                <div class="text-muted">
                    © @DateTime.Now.Year - wep_programlama_odev
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
