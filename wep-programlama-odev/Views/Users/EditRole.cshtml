@using Microsoft.AspNetCore.Mvc.Rendering
@model wep_programlama_odev.Models.EditUserRoleVm

@{
    ViewData["Title"] = "Rol Düzenle";
    var roleSelectList = new SelectList(Model.AllRoles, Model.SelectedRole);
}

<h1 class="page-title">Rol Düzenle</h1>

<div class="card-custom">
    <h4 class="mb-3">Kullanıcı</h4>
    <div class="mb-2"><strong>@Model.UserName</strong></div>
    <div class="text-muted mb-3">@Model.Email</div>

    <form asp-action="EditRole" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />

        <div class="mb-3">
            <label asp-for="SelectedRole" class="form-label">Rol</label>
            <select asp-for="SelectedRole"
                    class="form-select"
                    asp-items="roleSelectList">
                <option value="">-- Seçiniz --</option>
            </select>
            <span asp-validation-for="SelectedRole" class="text-danger"></span>
        </div>

        <button class="btn btn-primary" type="submit">Kaydet</button>
        <a class="btn btn-secondary" asp-action="Index">Geri</a>
    </form>
</div>
