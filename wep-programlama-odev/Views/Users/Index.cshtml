@model List<wep_programlama_odev.Models.UserListItemVm>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h1 class="page-title">Kullanıcılar</h1>

<div class="card-custom">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Kullanıcı Listesi</h4>
        <a class="btn btn-primary" asp-action="Create">Yeni Kullanıcı</a>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Email / Username</th>
                    <th>Roller</th>
                    <th style="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>
                            <div><strong>@u.UserName</strong></div>
                            <div class="text-muted">@u.Email</div>
                        </td>
                        <td>
                            @(u.Roles == null || u.Roles.Count == 0 ? "—" : string.Join(", ", u.Roles))
                        </td>
                        <td class="text-end">
                            <a class="btn btn-outline-secondary btn-sm"
                               asp-action="EditRole" asp-route-id="@u.Id">
                                Rol Düzenle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
