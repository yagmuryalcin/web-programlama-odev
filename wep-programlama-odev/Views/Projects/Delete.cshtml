@model wep_programlama_odev.Models.Project

@{
    ViewData["Title"] = "Projeyi Sil";
}

<h1 class="page-title text-danger">Projeyi Sil</h1>

<div class="card-custom">
    <h4 class="mb-3 text-danger">Bu projeyi silmek istediğinize emin misiniz?</h4>
    <p class="text-muted">
        Bu işlem geri alınamaz. Proje ile ilişkili tüm görevler de silinebilir.
    </p>

    <hr />

    <dl class="row">
        <dt class="col-sm-3">Proje Adı</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Açıklama</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Oluşturulma Tarihi</dt>
        <dd class="col-sm-9">@Model.CreatedAt</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">
            Evet, Projeyi Sil
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Vazgeç
        </a>
    </form>
</div>
