@model wep_programlama_odev.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">CreatedAt</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>
</div>

<hr />

<h4>Tasks for this Project</h4>

@{
    var tasks = Model.TaskItems?.ToList() ?? new List<wep_programlama_odev.Models.TaskItem>();
    var total = tasks.Count;
    var doneCount = tasks.Count(t => t.Status == wep_programlama_odev.Models.TaskStatus.Done);
    var inProgressCount = tasks.Count(t => t.Status == wep_programlama_odev.Models.TaskStatus.InProgress);
    var todoCount = tasks.Count(t => t.Status == wep_programlama_odev.Models.TaskStatus.Todo);
}

@if (total > 0)
{
    <div class="mb-3">
        <span class="me-3"><strong>Total:</strong> @total</span>
        <span class="me-3"><strong>To Do:</strong> @todoCount</span>
        <span class="me-3"><strong>In Progress:</strong> @inProgressCount</span>
        <span class="me-3"><strong>Done:</strong> @doneCount</span>
    </div>
}

@if (!tasks.Any())
{
    <p>No tasks found for this project.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>CreatedAt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in tasks.OrderByDescending(t => t.CreatedAt))
            {
                string badgeClass = item.Status switch
                {
                    wep_programlama_odev.Models.TaskStatus.Todo => "bg-secondary",
                    wep_programlama_odev.Models.TaskStatus.InProgress => "bg-warning text-dark",
                    wep_programlama_odev.Models.TaskStatus.Done => "bg-success",
                    _ => "bg-dark"
                };

                string statusText = item.Status switch
                {
                    wep_programlama_odev.Models.TaskStatus.Todo => "To Do",
                    wep_programlama_odev.Models.TaskStatus.InProgress => "In Progress",
                    wep_programlama_odev.Models.TaskStatus.Done => "Done",
                    _ => item.Status.ToString()
                };

                bool isDone = item.Status == wep_programlama_odev.Models.TaskStatus.Done;

                <tr>
                    <td>
                        <span class="@(isDone ? "text-decoration-line-through text-muted" : "")">
                            @item.Title
                        </span>
                    </td>
                    <td>
                        <span class="badge @badgeClass">@statusText</span>
                    </td>
                    <td>@item.CreatedAt</td>
                    <td>
                        <a asp-controller="TaskItems" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="TaskItems" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="TaskItems" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Project</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
