@model wep_programlama_odev.Models.Project

@{
    ViewData["Title"] = "Yeni Proje Oluştur";
}

<h1 class="page-title">Yeni Proje Oluştur</h1>

<div class="card-custom">
    <h4 class="mb-3">Proje Bilgileri</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Proje Adı -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Proje Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Örn: Proje ve Görev Takip Sistemi" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Açıklama -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Projeyle ilgili kısa açıklama..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Butonlar -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>

             
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Durum</label>
                    <select asp-for="Status" class="form-control"
                            asp-items="Html.GetEnumSelectList<wep_programlama_odev.Models.ProjectStatus>()">
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Listeye Dön</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
