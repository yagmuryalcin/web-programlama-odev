@using Microsoft.AspNetCore.Identity
@model IEnumerable<wep_programlama_odev.Models.Project>

@{
    ViewData["Title"] = "Projeler";
    bool isAdmin = User.IsInRole("Admin");
}

<h1 class="page-title">Projeler</h1>

@if (isAdmin)
{
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            ➕ Yeni Proje Oluştur
        </a>
    </div>
}

<div class="card-custom">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Proje Adı</th>
                <th>Açıklama</th>
                <th>Oluşturulma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                    <td class="action-links">
                        <a asp-action="Details"
                           asp-route-id="@item.Id"
                           class="text-primary">
                            Detaylar
                        </a>

                        @if (isAdmin)
                        {
                            <text> | </text>
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="text-warning">
                                Düzenle
                            </a>
                            <text> | </text>
                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="text-danger">
                                Sil
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <p class="text-muted text-center mb-0">
            Henüz oluşturulmuş bir proje bulunmamaktadır.
        </p>
    }
</div>
